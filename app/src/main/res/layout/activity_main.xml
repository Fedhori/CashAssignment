<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="activity"
            type="com.example.cashassignment.view.MainActivity" />

        <variable
            name="viewModel"
            type="com.example.cashassignment.viewmodel.HomeViewModel" />

    </data>


    <ScrollView
        android:id="@+id/scrollView_home"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fillViewport="false"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout

            android:id="@+id/constarintLayout_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EEEEEE"
            tools:context=".view.MainActivity">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPager2_home_banner"
                android:layout_width="match_parent"
                android:layout_height="224dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constarintLayout_home_upperBar"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/textView_home_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_weight="1"
                    android:text="1,025,793"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/icon_home_point"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/icon_home_point"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="18dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_point" />

                <ImageButton
                    android:id="@+id/button_home_list"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="#00000000"
                    android:paddingLeft="14dp"
                    android:paddingTop="16dp"
                    android:paddingRight="14dp"
                    android:paddingBottom="16dp"
                    android:scaleType="fitCenter"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_list" />

                <ImageButton
                    android:id="@+id/button_home_alarm"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="#00000000"
                    android:paddingLeft="14dp"
                    android:paddingTop="16dp"
                    android:paddingRight="14dp"
                    android:paddingBottom="16dp"
                    android:scaleType="fitCenter"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/button_home_list"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_alarm" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/linearLayout_newMission"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/viewPager2_home_banner">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constaraintLayout_newMission_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView_newMission_missionName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="14dp"
                        android:text="새로운 미션"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <Button
                        android:id="@+id/button_newMission_findMission"
                        style="@style/Widget.AppCompat.Button"
                        android:layout_width="95dp"
                        android:layout_height="match_parent"
                        android:background="#00000000"
                        android:textColor="#000000"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView_newMission_findMission"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="전체 보기"
                        app:layout_constraintBottom_toBottomOf="@+id/textView_newMission_missionName"
                        app:layout_constraintStart_toStartOf="@+id/button_newMission_findMission"
                        app:layout_constraintTop_toTopOf="@+id/textView_newMission_missionName" />

                    <ImageView
                        android:id="@+id/icon_newMission_chevron"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginStart="4dp"
                        app:layout_constraintBottom_toBottomOf="@+id/textView_newMission_findMission"
                        app:layout_constraintStart_toEndOf="@+id/textView_newMission_findMission"
                        app:layout_constraintTop_toTopOf="@+id/textView_newMission_findMission"
                        app:srcCompat="@drawable/ic_chevron_right" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView_newMission_tasks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:orientation="horizontal"
                    android:paddingLeft="8dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout_myMission"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout_newMission">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constaraintLayout_myMission_title"
                    android:layout_width="match_parent"
                    android:layout_height="48dp">

                    <TextView
                        android:id="@+id/textView_myMission_mission"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="38dp"
                        android:layout_marginBottom="23dp"
                        android:text="최근 참여한 미션"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <Button
                        android:id="@+id/button_myMission_findMission"
                        style="@style/Widget.AppCompat.Button"
                        android:layout_width="95dp"
                        android:layout_height="match_parent"
                        android:background="#00000000"
                        android:textColor="#000000"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView_myMission_findMission"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="전체 보기"
                        app:layout_constraintBottom_toBottomOf="@+id/textView_myMission_mission"
                        app:layout_constraintStart_toStartOf="@+id/button_myMission_findMission"
                        app:layout_constraintTop_toTopOf="@+id/textView_myMission_mission" />

                    <ImageView
                        android:id="@+id/icon_myMission_chevron"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginStart="4dp"
                        app:layout_constraintBottom_toBottomOf="@+id/textView_myMission_findMission"
                        app:layout_constraintStart_toEndOf="@+id/textView_myMission_findMission"
                        app:layout_constraintTop_toTopOf="@+id/textView_myMission_findMission"
                        app:srcCompat="@drawable/ic_chevron_right" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView_myMission_tasks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout_hotMission"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout_myMission">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constaraintLayout_title"
                    android:layout_width="match_parent"
                    android:layout_height="48dp">

                    <TextView
                        android:id="@+id/textView_hotMission_mission"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="#한 번 제출 높은 보상"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <Button
                        android:id="@+id/button_hotMission_findMission"
                        style="@style/Widget.AppCompat.Button"
                        android:layout_width="95dp"
                        android:layout_height="wrap_content"
                        android:background="#00000000"
                        android:textColor="#000000"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView_hotMission_findMission"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="전체 보기"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/button_hotMission_findMission"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/icon_hotMission_chevron"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginStart="4dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/textView_hotMission_findMission"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_chevron_right" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView_hotMission_tasks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout_home_footer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="96dp"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout_hotMission"
                tools:layout_editor_absoluteX="411dp">

                <TextView
                    android:id="@+id/textView_home_companyName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="56dp"
                    android:text="셀렉트스타 (주)"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView_home_companyInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="대표 이사 김세엽, 신호욱 / 사업자 등록번호: 626 87 011194 \n주소 대전광역시 유성구 유성대로 782 / 문의 카카오톡 캐시미션"
                    app:layout_constraintStart_toStartOf="@+id/textView_home_companyName"
                    app:layout_constraintTop_toBottomOf="@+id/textView_home_companyName" />

                <TextView
                    android:id="@+id/textView_home_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="V.4.4.8"
                    app:layout_constraintStart_toStartOf="@+id/textView_home_companyInfo"
                    app:layout_constraintTop_toBottomOf="@+id/button_home_termsOfService" />

                <TextView
                    android:id="@+id/textView_home_slash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/"
                    app:layout_constraintBottom_toBottomOf="@+id/button_home_termsOfService"
                    app:layout_constraintStart_toEndOf="@+id/button_home_termsOfService"
                    app:layout_constraintTop_toTopOf="@+id/button_home_termsOfService" />

                <Button
                    android:id="@+id/button_home_termsOfService"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:background="#00000000"
                    android:text="서비스 이용 약관"
                    android:textColor="#000000"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView_home_companyInfo" />

                <Button
                    android:id="@+id/button_home_privacyPolicy"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:background="#00000000"
                    android:text="개인정보처리방침"
                    android:textColor="#000000"
                    app:layout_constraintStart_toEndOf="@+id/textView_home_slash"
                    app:layout_constraintTop_toTopOf="@+id/button_home_termsOfService" />
            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</layout>